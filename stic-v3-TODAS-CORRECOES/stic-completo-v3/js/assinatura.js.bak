async function confirmar() {
    // Verificar se assinou
    const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
    const pixels = imageData.data;
    let hasDrawing = false;

    for (let i = 0; i < pixels.length; i += 4) {
        if (pixels[i + 3] !== 0) {
            hasDrawing = true;
            break;
        }
    }

    if (!hasDrawing) {
        alert('‚ùå Por favor, assine antes de confirmar!');
        return;
    }

    if (!confirm('Confirma a assinatura?')) {
        return;
    }

    try {
        // Converter canvas para Base64 (SEM usar Storage - gr√°tis!)
        const assinaturaBase64 = canvas.toDataURL('image/png');
        
        // Obter IP
        const ip = await obterIP();

        // Salvar DIRETO no Firestore (sem Storage)
        await saidasRef.doc(emprestimoId).update({
            assinado: true,
            data_assinatura: new Date().toISOString(),
            assinatura_base64: assinaturaBase64, // Base64 direto
            ip_assinatura: ip
        }).then(() => {

        }).then(() => {
            console.log('‚úÖ Assinatura salva com sucesso!');

            // Mostrar sucesso
            document.getElementById('successMessage').style.display = 'block';
            document.querySelector('.signature-buttons').style.display = 'none';
            canvas.style.border = '2px solid #28a745';

            // Adicionar bot√µes de a√ß√£o
            const actionsDiv = document.createElement('div');
            actionsDiv.style.cssText = 'display:grid;grid-template-columns:1fr 1fr;gap:1rem;margin-top:1rem';
            actionsDiv.innerHTML = '<button onclick="baixarPDF()" class="btn-primary">üìÑ Baixar PDF</button>';
            actionsDiv.innerHTML += '<button onclick="fechar()" class="btn-secondary">‚úÖ Fechar</button>';
            document.getElementById('successMessage').after(actionsDiv);

            // Fechar automaticamente ap√≥s 10 segundos
            setTimeout(() => {
                fechar();
            }, 10000);
        });

    } catch (error) {
        console.error('Erro:', error);
        alert('‚ùå Erro ao salvar assinatura: ' + error.message);
    }
}

