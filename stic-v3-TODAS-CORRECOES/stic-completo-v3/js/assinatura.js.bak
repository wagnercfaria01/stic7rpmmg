        html += '<div class="info-item"><strong>N√∫mero PM:</strong> ' + (emp.numero_recebedor || emp.recebedor?.numero_policia || 'N/A') + '</div>';
        html += '<div class="info-item"><strong>Unidade:</strong> ' + (emp.recebedor?.unidade || 'N/A') + '</div>';
