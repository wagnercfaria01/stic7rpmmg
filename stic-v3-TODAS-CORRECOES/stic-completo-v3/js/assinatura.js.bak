function formatarTipo(tipo) {
    const tipos = {
        'hd': 'HD/SSD',
        'radio': 'R√°dio M√≥vel',
        'ht': 'HT',
        'computador': 'Computador',
        'notebook': 'Notebook',
        'carregador': 'Carregador',
        'antena': 'Antena',
        'outro': 'Outro'
    };
    return tipos[tipo] || tipo;
}

